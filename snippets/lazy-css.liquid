{% case loading %}
  {% when 'preload' %}
    {{ filename | asset_url | stylesheet_tag: preload: true }}

  {% when 'low' %}
    <link rel="stylesheet" href="{{ filename | asset_url }}" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="{{ filename | asset_url }}"></noscript>

  {% when 'lazy' %}
    <script>
      window._lazyCSS = window._lazyCSS || [];
      window._lazyCSS.push('{{ filename | asset_url }}');
    </script>

  {% else %}
    <link rel="stylesheet" href="{{ filename | asset_url }}">
{% endcase %}
