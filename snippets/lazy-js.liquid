{% assign path = filename | asset_url %}

{% case loading %}
  {% when 'async' %}
    <script src="{{ path }}" async></script>

  {% when 'defer' %}
    <script src="{{ path }}" defer></script>

  {% when 'lazy' %}
    <script>
      window._lazyJS = window._lazyJS || [];
      window._lazyJS.push('{{ path }}');
    </script>

  {% else %}
    <script src="{{ path }}" defer></script>
{% endcase %}
