{% comment %} Font Faces {% endcomment %}
<link rel="stylesheet" href="{{ 'fontfaces.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript><link rel="stylesheet" href="{{ 'fontfaces.css' | asset_url }}"></noscript>

{% comment %} Mobile Size Card Product {% endcomment %}
{% if template.name == 'product' %}
  {% render 'lazy-css', filename: 'mobile-size-card-product.css', loading: 'lazy' %}
{% else %}
  <link
    rel="stylesheet"
    href="{{ 'mobile-size-card-product.css' | asset_url }}"
    media="print"
    onload="this.media='all'"
  >
  <noscript><link rel="stylesheet" href="{{ 'mobile-size-card-product.css' | asset_url }}"></noscript>
{% endif %}

{% comment %} Font Awesome, Slick CSS {% endcomment %}
{% if template.name != 'product' %}
  <link rel="stylesheet" href="{{ 'font-awesome.min.css' | asset_url }}" media="print" onload="this.media='all'">
  <noscript><link rel="stylesheet" href="{{ 'font-awesome.min.css' | asset_url }}"></noscript>
{% endif %}

<link rel="stylesheet" href="{{ 'slick.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript><link rel="stylesheet" href="{{ 'slick.css' | asset_url }}"></noscript>

{% render 'lazy-css', filename: 'custom.css', loading: 'preload' %}

{% comment %} Predictive Search {% endcomment %}
{%- if settings.predictive_search_enabled -%}
  <link
    rel="stylesheet"
    href="{{ 'component-predictive-search.css' | asset_url }}"
    media="print"
    onload="this.media='all'"
  >
  <noscript><link rel="stylesheet" href="{{ 'component-predictive-search.css' | asset_url }}"></noscript>
{%- endif -%}

{% comment %} Quick View {% endcomment %}

{%- if settings.quick_view_enabled -%}
  {% if template.name == 'product' %}
    {% render 'lazy-css', filename: 'component-quick-view.css', loading: 'lazy' %}
  {% else %}
    <link
      rel="stylesheet"
      href="{{ 'component-quick-view.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
    <noscript><link rel="stylesheet" href="{{ 'component-quick-view.css' | asset_url }}"></noscript>
  {% endif %}
{%- endif -%}

{% comment %} Color Swatches {% endcomment %}
{%- if settings.color_swatches_enabled -%}
  <link
    rel="stylesheet"
    href="{{ 'component-color-swatches.css' | asset_url }}"
    media="print"
    onload="this.media='all'"
  >
  <noscript><link rel="stylesheet" href="{{ 'component-color-swatches.css' | asset_url }}"></noscript>
{%- endif -%}

{% comment %} Gift Wrapping {% endcomment %}
{%- if linklists['gift-wrapping'].links != blank and linklists['gift-wrapping'].links.first.type == 'product_link' -%}
  <link
    rel="stylesheet"
    href="{{ 'component-gift-wrapping.css' | asset_url }}"
    media="print"
    onload="this.media='all'"
  >
  <noscript><link rel="stylesheet" href="{{ 'component-gift-wrapping.css' | asset_url }}"></noscript>
{%- endif -%}
